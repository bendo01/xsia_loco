# To use your own domain name (with automatic HTTPS), first make
# sure your domain's A/AAAA DNS records are properly pointed to
# this machine's public IP, then replace ":80" below with your
# domain name.

:80 {
        # Set this path to your site's directory.
        root * /usr/share/caddy

        # Enable the static file server.
        file_server

        # Another common task is to set up a reverse proxy:
        # reverse_proxy localhost:8080

        # Or serve a PHP site through php-fpm:
        # php_fastcgi localhost:9000
}

# Refer to the Caddy docs for more information:
# https://caddyserver.com/docs/caddyfile

siaka.tritunas.ac.id {
    root * /var/www/html/client
    file_server

    # SPA fallback
    try_files {path} /index.html

    # Enable compression
    encode zstd gzip

    # Cache static assets aggressively (hashed files)
    @static {
	path_regexp static ^/assets/.*\.(js|css|png|jpg|jpeg|svg|gif|ico|webp|woff2?)$
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Cache HTML less aggressively
    @html {
	path *.html
    }
    header @html Cache-Control "no-cache"

    # Optional: force HTTPS
    # redir http://siaka.tritunas.ac.id https://siaka.tritunas.ac.id permanent
}

api.siaka.tritunas.ac.id {
    # Reverse proxy to SolidJS app on port 5051
    # reverse_proxy localhost:5051
    reverse_proxy localhost:5051 {
        header_up X-Subdomain {http.request.header.X-Subdomain}
    }
    # Enable compression
    encode zstd gzip

    # Optional: force HTTPS redirect
    # redir http://api.siaka.tritunas.ac.id https://api.siaka.tritunas.ac.id permanent
}
